.sidebar-group
    #contact-information.sidebar
      header
        span About
        ul.list-inline
          li.list-inline-item
            a.btn.btn-light.sidebar-close(href='#')
              i.ti-close
      .sidebar-body(tabindex='6' style='overflow: hidden; outline: none;')
        .pl-4.pr-4.text-center
          figure.avatar.avatar-state-danger.avatar-xl.mb-4
            img#profileAvatar.rounded-circle(src='https://thumbs.dreamstime.com/b/no-image-available-icon-flat-vector-no-image-available-icon-flat-vector-illustration-132484366.jpg')
          h5.text-primary#profileFullname
          p.text-muted Last seen: Today
        hr
        .pl-4.pr-4
          h6 About
          p.text-muted#profileAbout

        hr
        .pl-4.pr-4
          h6 Phone
          p.text-muted#profilePhone
        hr
        .pl-4.pr-4
          h6 Media
          .files
            ul.list-inline(tabindex='1' style='overflow: hidden; outline: none;')
              li.list-inline-item
                a(href='#')
                  figure.avatar.avatar-lg
                    span.avatar-title.bg-warning
                      i.fa.fa-file-pdf-o
              li.list-inline-item
                a(href='#')
                  figure.avatar.avatar-lg
                    img(src='dist/images/women_avatar1.jpg')
              li.list-inline-item
                a(href='#')
                  figure.avatar.avatar-lg
                    img(src='dist/images/women_avatar3.jpg')
              li.list-inline-item
                a(href='#')
                  figure.avatar.avatar-lg
                    img(src='dist/images/women_avatar4.jpg')
              li.list-inline-item
                a(href='#')
                  figure.avatar.avatar-lg
                    span.avatar-title.bg-success
                      i.fa.fa-file-excel-o
              li.list-inline-item
                a(href='#')
                  figure.avatar.avatar-lg
                    span.avatar-title.bg-info
                      i.fa.fa-file-text-o
        hr
        .pl-4.pr-4
          h6 Address
          p.text-muted#profileAddress
        hr
        .pl-4.pr-4
          h6 Email
          p
            a#profileEmail(href='#')
        hr
        .pl-4.pr-4
          h6 Social Links
          ul.list-inline.social-links
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-facebook(href='#')
                i.fa.fa-facebook
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-twitter(href='#')
                i.fa.fa-twitter
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-dribbble(href='#')
                i.fa.fa-dribbble
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-whatsapp(href='#')
                i.fa.fa-whatsapp
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-linkedin(href='#')
                i.fa.fa-linkedin
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-google(href='#')
                i.fa.fa-google
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-behance(href='#')
                i.fa.fa-behance
            li.list-inline-item
              a.btn.btn-sm.btn-floating.btn-instagram(href='#')
                i.fa.fa-instagram
        hr
        .pl-4.pr-4
          .form-group
            .form-item.custom-control.custom-switch
              input#customSwitch11.custom-control-input(type='checkbox')
              label.custom-control-label(for='customSwitch11') Block
          .form-group
            .form-item.custom-control.custom-switch
              input#customSwitch12.custom-control-input(type='checkbox' checked='')
              label.custom-control-label(for='customSwitch12') Mute
          .form-group
            .form-item.custom-control.custom-switch
              input#customSwitch13.custom-control-input(type='checkbox')
              label.custom-control-label(for='customSwitch13') Get notification
